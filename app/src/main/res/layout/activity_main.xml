<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bcklogin"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_gradient" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="281dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bckmain"
                        android:scaleType="centerCrop"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/header_gradient"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/logo"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="50dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/baseline_person_24"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/text_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello"
                                android:textSize="16sp"
                                android:fontFamily="@font/american"
                                android:textColor="@color/main_white"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="25dp"
                            android:layout_width="315dp"
                            android:layout_height="165dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:background="@drawable/country_gradient">

                            <RelativeLayout
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="left">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="@string/find_country"
                                    android:textSize="24sp"
                                    android:textColor="@color/main_white"
                                    android:fontFamily="@font/bebas"/>

                                <Button
                                    android:layout_width="80dp"
                                    android:layout_height="29dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="16.31dp"
                                    android:background="@drawable/button_gradient"
                                    android:fontFamily="@font/bebas"
                                    android:lineHeight="10sp"
                                    android:onClick="open_russian"
                                    android:text="@string/view"
                                    android:textAlignment="center"
                                    android:textColor="@color/main_white"
                                    android:textSize="10sp"
                                    app:backgroundTint="@color/secondary_button" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="162dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right">

                                <ImageView
                                    android:id="@+id/image_header"
                                    android:layout_width="110dp"
                                    android:layout_height="80dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/rusflag"/>

                                <TextView
                                    android:id="@+id/text_header"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="16.31dp"
                                    android:textColor="@color/main_white"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/bebas" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/main_white"
                            android:fontFamily="@font/bebas"
                            android:textSize="29sp"
                            android:text="@string/coutries"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_white"
                            android:fontFamily="@font/bebas"
                            android:textSize="17sp"
                            android:text="@string/more"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <HorizontalScrollView
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            android:layout_marginLeft="20dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="110dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="@color/search"
                                android:onClick="open_brazil">

                                <ImageView
                                    android:id="@+id/country_image"
                                    android:layout_width="80dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="20dp"
                                    android:src="@drawable/brazilflag"/>

                                <TextView
                                    android:id="@+id/country_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_gravity="bottom"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/bebas"
                                    android:textColor="@color/main_white"
                                    android:layout_marginBottom="5dp"
                                    tools:ignore="RtlCompat"
                                    android:text="@string/brazil"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="110dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="@color/search"
                                android:layout_marginLeft="20dp"
                                android:onClick="open_china">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/chinflag"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_gravity="bottom"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/bebas"
                                    android:textColor="@color/main_white"
                                    android:layout_marginBottom="5dp"
                                    tools:ignore="RtlCompat"
                                    android:text="@string/china"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="110dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="@color/search"
                                android:layout_marginLeft="20dp"
                                android:onClick="open_japn">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/flagjap"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_gravity="bottom"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/bebas"
                                    android:textColor="@color/main_white"
                                    android:layout_marginBottom="5dp"
                                    tools:ignore="RtlCompat"
                                    android:text="@string/japan"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="110dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="@color/search"
                                android:layout_marginLeft="20dp"
                                android:onClick="open_germany">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/gerflag"/>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_gravity="bottom"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/bebas"
                                    android:textColor="@color/main_white"
                                    android:layout_marginBottom="5dp"
                                    tools:ignore="RtlCompat"
                                    android:text="@string/germany"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="110dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="@color/search"
                                android:layout_marginLeft="20dp"
                                android:onClick="open_russian">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/rusflag"/>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_gravity="bottom"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/bebas"
                                    android:textColor="@color/main_white"
                                    android:layout_marginBottom="5dp"
                                    tools:ignore="RtlCompat"
                                    android:text="@string/russian"/>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </HorizontalScrollView>

                    <RelativeLayout
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/main_white"
                            android:fontFamily="@font/bebas"
                            android:textSize="29sp"
                            android:text="@string/cities"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_white"
                            android:fontFamily="@font/bebas"
                            android:textSize="17sp"
                            android:text="@string/more"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <HorizontalScrollView
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            android:layout_marginLeft="20dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="110dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="@color/search"
                                android:onClick="open_brazil">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="20dp"
                                    android:src="@drawable/brazilflag"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_gravity="bottom"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/bebas"
                                    android:textColor="@color/main_white"
                                    android:layout_marginBottom="5dp"
                                    tools:ignore="RtlCompat"
                                    android:text="@string/sao"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="110dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="@color/search"
                                android:layout_marginLeft="20dp"
                                android:onClick="open_china">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/chinflag"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_gravity="bottom"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/bebas"
                                    android:textColor="@color/main_white"
                                    android:layout_marginBottom="5dp"
                                    tools:ignore="RtlCompat"
                                    android:text="@string/pequim"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="110dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="@color/search"
                                android:layout_marginLeft="20dp"
                                android:onClick="open_japn">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/flagjap"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_gravity="bottom"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/bebas"
                                    android:textColor="@color/main_white"
                                    android:layout_marginBottom="5dp"
                                    tools:ignore="RtlCompat"
                                    android:text="@string/toquio"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="110dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="@color/search"
                                android:layout_marginLeft="20dp"
                                android:onClick="open_germany">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/gerflag"/>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_gravity="bottom"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/bebas"
                                    android:textColor="@color/main_white"
                                    android:layout_marginBottom="5dp"
                                    tools:ignore="RtlCompat"
                                    android:text="@string/berlin"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="110dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="@color/search"
                                android:layout_marginLeft="20dp"
                                android:onClick="open_russian">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/rusflag"/>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_gravity="bottom"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/bebas"
                                    android:textColor="@color/main_white"
                                    android:layout_marginBottom="5dp"
                                    tools:ignore="RtlCompat"
                                    android:text="@string/moscow"/>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/bebas"
                        android:textAlignment="center"
                        android:text="@string/search"
                        android:textColor="@color/main_white"
                        android:textSize="29sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="30dp">

                        <EditText
                            android:id="@+id/input_search"
                            android:layout_marginTop="20dp"
                            android:layout_width="350dp"
                            android:layout_height="30dp"
                            android:background="@drawable/rect"
                            android:hint="PESQUISAR"
                            android:textColor="@color/main_white"
                            android:fontFamily="@font/bebas"
                            android:textColorHint="@color/main_white_transparent"
                            android:textSize="20sp"
                            android:paddingLeft="17dp"
                            android:layout_centerHorizontal="true"/>

                        <ImageView
                            android:onClick="search_countries"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="45dp"
                            android:src="@drawable/baseline_search_24" />

                    </RelativeLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/search"
                    android:layout_marginTop="20dp"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="30dp"
                    android:backgroundTint="@color/search"
                    android:visibility="invisible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/flag_country"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ncflag"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/name_country"
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebas"
                                android:textColor="@color/main_white"
                                android:textSize="30sp"/>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>